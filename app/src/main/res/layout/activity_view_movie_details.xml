<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    tools:context=".ui.movie.ViewMovieDetailsActivity">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/youtube_view_height" />

    <TextView
        android:id="@+id/tvViewMovieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorPrimary"
        android:text="@string/movie_default_title"
        android:textSize="@dimen/text_extra_large"/>

    <RatingBar
        android:id="@+id/viewMovieRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="@integer/movie_max_rating"
        android:rating="4" />

    <TextView
        android:id="@+id/tvViewMovieOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/text_normal"
        android:text="@string/movie_default_overview" />
</LinearLayout>